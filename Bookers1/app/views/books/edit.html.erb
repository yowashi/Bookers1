<h1>Editing Book</h1>

<% if flash[:notice] %>
 <div class="message"><%= flash[:notice] %></div>
<% end %>

<% if @book.errors.any? %>
<p>error</p>
 <div class="alert alert-warning">
 	<ul>
 		<% @book.errors.full_messages.each do |message| %>
 		<li><%= message %></li>
 		<% end %>
 	</ul>
 </div>
 <% end %>

<%= form_for(@book) do |f| %>
	<h4>title</h4>
	<%= f.text_field :title %>
	<h4>body</h4>
	<%= f.text_area :body %>
	<%= f.submit 'Update Book' %>
	<% end %>
	<%= link_to "Show", book_path(@book) %>
	<%= link_to "Back", books_path %>


