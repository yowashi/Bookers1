<h2>Books</h2>
<table>
	<thead>
		<tr>
			<th>title</th><th>body</th><th></th><th></th><th></th>
		</tr>
	</thead>
	<tbody>
	<% @books.each do |book| %>
	<tr>
		<td><%= book.title %></td>
		<td><%= book.body %></td>
		<td><%= link_to "Show", book_path(book) %></td>
		<td><%= link_to "Edit", edit_book_path(book) %></td>
		<td><%= link_to "Destroy", book_path(book), method: :delete %></td>
	</tr>
	<% end %>
	</tbody>
</table>

<% if @book.errors.any? %>
<p>error</p>
 <div class="alert alert-warning">
 	<ul>
 		<% @book.errors.full_messages.each do |message| %>
 		<li><%= message %></li>
 		<% end %>
 	</ul>
 </div>
 <% end %>

<h3>New book</h3>

<%= form_for(@book) do |f| %>

<h4>title</h4>
<%= f.text_field :title %>

<h4>body</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>
